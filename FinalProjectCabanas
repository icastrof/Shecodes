    <script>
      var slideIndex = 1;
      showSlides(slideIndex);

      // Next/previous controls
      function plusSlides(n) {
        showSlides((slideIndex += n));
      }

      // Thumbnail image controls
      function currentSlide(n) {
        showSlides((slideIndex = n));
      }
      function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dot");
        if (n > slides.length) {
          slideIndex = 1;
        }
        if (n < 1) {
          slideIndex = slides.length;
        }
        for (i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
          dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
      }
      function contactDetails() {
        let name = prompt("What is your name?");
        let email = prompt("What is your email address?");
        let n = email.length;
        if (n < 2){
          alert(`Hi ${name}, we will contact you asap.`);
        } else {
          alert(`Hi ${name}, as this project is from the 3 week workshop I am not able to keep your email. If you are interested in knowing more about the property feel free to contact me at icastrof.9@gmail.com üòÄ 
Happy Coding! üë©‚Äçüíª`);
        }
      }
      let button = document.querySelector("button");
      button.addEventListener("click", contactDetails);
      //save email not possible so here is my email in case you want more info :)
    </script>
